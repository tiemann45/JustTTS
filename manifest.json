{
    "name": "JustTTS",
    "version":"1.0.8",
    "manifest_version":2,
    "description": "A sidekick for my lovely daughter to learn Chinese. Just select the text and click the extension icon to listen.",
    "icons": {
	"128": "img/JustTTS128.png",
	"48": "img/JustTTS48.png",
	"16": "img/JustTTS16.png"
    },
    "options_page": "config.html",
    "browser_action": {
	"default_title": "Speak the selection"
    },
    "background": {
    	"scripts": ["background.js"],
    	"persistent": true
    },
    "web_accessible_resources": [
      "img/*"
    ],
    "permissions": ["*://*/*", "activeTab"]
}
