{
    //Required
    "name": "JustTTS",
    "version":"1.0",
    "manifest_version":2,

    //Recommended
    "description": "A sidekick for my lovely daughter to learn Chinese. Just select the text and click the extension icon to listen. Based on Chrome speech sythesis feature.",
    "icons": {
	"128": "img/JustTTS128.png",
	"48": "img/JustTTS48.png",
	"16": "img/JustTTS16.png"
    },
    "options_page": "config.html",

    //Type of actions: Browser, Page, or none
    "browser_action": {
	"default_title": "Daddy loves Norah"//,
	//"default_popup": "popup.html"
    },
    "background": {
    	"scripts": ["background.js"],
    	"persistent": false
      },
    //intent of app. what you will access from user
    "permissions": ["*://*/*", "activeTab"]
}
